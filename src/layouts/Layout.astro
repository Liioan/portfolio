---
interface Props {
  title: string;
}

const { title } = Astro.props;

import Cursor from "../components/Cursor.astro";
import Links from "../components/Links.astro";
import Nav from "../components/Nav";

const description =
  "I am a passionate Web Developer and Designer based in Poland. I use mainly Typescript, React and Golang";

const bigImg = "/meta_img_big.png";
const smallImg = "/meta_img_small.png";
---

<html lang="en">
  <head>
    <meta
      name="keyword"
      content="portfolio, javascript, typescript, golang, react, developer"
    />
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={bigImg} />
    <meta property="og:url" content="https://davidbijok.vercel.app" />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={bigImg} />
    <title>{title}</title>
  </head>
  <body
    class="flex min-h-screen flex-col gap-[100px] bg-background selection:bg-primary selection:text-black xl:gap-0"
  >
    <Nav client:only />
    <Cursor />
    <slot />
    <Links />
  </body>
</html>
