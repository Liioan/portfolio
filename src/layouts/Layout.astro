---
interface Props {
  title: string;
}

const { title } = Astro.props;

import Cursor from '../components/Cursor.astro';
import Links from '../components/Links.astro';
import Nav from '../components/Nav';
---

<html lang='en'>
  <head>
    <meta
      name='keyword'
      content='portfolio, javascript, typescript, golang, react, developer'
    />
    <meta charset='UTF-8' />
    <meta
      name='description'
      content='I am a passionate Web Developer and Designer based in Poland. I use mainly Typescript, React and Golang'
      }
    />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <!-- HTML Meta Tags -->
    <title>David Bijok | Frontend developer</title>
    <meta
      name='description'
      content='I am a passionate Web Developer and Designer based in Poland. I use mainly Typescript, React and Golang'
    />

    <!-- Facebook Meta Tags -->
    <meta property='og:url' content='https://davidbijok.vercel.app' />
    <meta property='og:type' content='website' />
    <meta property='og:title' content='David Bijok | Frontend developer' />
    <meta
      property='og:description'
      content='I am a passionate Web Developer and Designer based in Poland. I use mainly Typescript, React and Golang'
    />
    <meta property='og:image' content='/meta_img.webp' />

    <!-- Twitter Meta Tags -->
    <meta name='twitter:card' content='summary_large_image' />
    <meta property='twitter:domain' content='davidbijok.vercel.app' />
    <meta property='twitter:url' content='https://davidbijok.vercel.app' />
    <meta name='twitter:title' content='David Bijok | Frontend developer' />
    <meta
      name='twitter:description'
      content='I am a passionate Web Developer and Designer based in Poland. I use mainly Typescript, React and Golang'
    />
    <meta name='twitter:image' content='/meta_img.webp' />

    <!-- Meta Tags Generated via https://www.opengraph.xyz -->
    <title>{title}</title>
  </head>
  <body
    class='flex min-h-screen flex-col gap-[100px] bg-background selection:bg-primary selection:text-black xl:gap-0'
  >
    <Nav client:only />
    <Cursor />
    <slot />
    <Links />
  </body>
</html>
