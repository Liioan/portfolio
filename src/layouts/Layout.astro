---
interface Props {
  title: string;
}

const { title } = Astro.props;

import Cursor from "../components/Cursor.astro";
import Links from "../components/Links.astro";
import Nav from "../components/Nav";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="David Bijok portfolio" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="flex min-h-screen flex-col gap-[100px] bg-background selection:bg-primary selection:text-black xl:gap-0"
  >
    <Nav client:only />
    <Cursor />
    <slot />
    <Links />
  </body>
</html>
