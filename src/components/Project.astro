---
import MagneticButton from './MagneticButton';
import { type projectType } from '../pages/index.astro';
interface Props {
  project: projectType;
}
const { project } = Astro.props;
---

<style>
  .icon {
    filter: invert(32%) sepia(0%) saturate(203%) hue-rotate(136deg)
      brightness(92%) contrast(84%);
  }
</style>

<div
  class='project relative flex w-[70%] max-w-md flex-col justify-between gap-10 rounded-[20px] border-2 border-[#f5f5f5a0] bg-gradient-to-br from-[#f5f5f50f] p-10 lg:min-h-[480px]'
>
  <img
    src={project.logo}
    alt={project.logo}
    class='icon absolute bottom-5 right-5 max-h-[70px] rounded-xl opacity-30'
  />
  <div class='flex flex-col gap-2'>
    <h2 class='text-3xl font-bold text-white md:text-[40px]'>
      {project.title}
    </h2>
    <h3 class='text-lg font-semibold text-primary md:text-[20px]'>
      {project.subtitle}
    </h3>
  </div>
  <p
    class='flex-grow font-content text-base font-semibold text-white md:text-[20px]'
  >
    {project.description}
  </p>
  <div class='flex gap-[25px]'>
    <MagneticButton client:only>
      <a
        href={project.github}
        title={`${project.subtitle} github page`}
        class='hide-cursor'
      >
        <img src='/github2.webp' alt='github' />
      </a>
    </MagneticButton>
    {
      project.website && (
        <MagneticButton client:only>
          <a
            href={project.website}
            title={`${project.subtitle} website`}
            class='hide-cursor'
          >
            <img src='/external.webp' alt='external' />
          </a>
        </MagneticButton>
      )
    }
  </div>
</div>
